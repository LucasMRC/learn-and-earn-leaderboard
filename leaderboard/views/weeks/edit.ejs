<% layout('layouts/boilerplate') %>

<div class="form-container mx-md-5 mt-md-5">
	<h1>Edit week</h1>
	<h3><%= week.dateRange %></h3>
	<form action="/admin/weeks/<%= week._id %>?_method=PUT" method="POST">
		<div>
			<p>1st Place goes to:</p>
			<input type="text" name="first" value="<%= week.winners[0].name %>" placeholder="Name">
		</div>
		<div>
			<p>2nd Place goes to:</p>
			<input type="text" name="second" value="<%= week.winners[1].name %>" placeholder="Name">
		</div>
		<div>
			<p>3rd Place goes to:</p>
			<input type="text" name="third" value="<%= week.winners[2].name %>" placeholder="Name">
		</div>
		<div>
			<p>Week date range:</p>
			<input id="week" type="text" name="dateRange" placeholder="Date Range" value="<%= week.dateRange %>">
		</div>
		<input type="submit" value="Edit Week">
	</form>
</div>